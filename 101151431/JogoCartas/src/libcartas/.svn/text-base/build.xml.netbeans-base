<project name="jogocartas" basedir="." default="executar">

    <property name="classes" location="classes"/>

    <target name="dir">
        <mkdir dir="classes" />
    </target>

	<target name="limpar">
        <delete dir="classes"/>
    </target>


    <target name="compilar" depends="dir">
        <javac srcdir="${basedir}"
        destdir="${classes}" />
    </target>

	<target name="empacotar" depends="compilar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/LibBaralho.jar"
            basedir="${basedir}/classes">
            <manifest>
                <attribute name="Main-Class" value="JogoCarta"/>
            </manifest>
        </jar>
    </target>

    <target name="executar" depends="empacotar, limpar">
        <java jar="build/jar/LibBaralho.jar" fork="true"/>
    </target>


</project>
